<Window x:Class="RestaurantClient.startupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantClient"
        mc:Ignorable="d"
        Title="Belépés | Regisztráció" Height="491.25" Width="800">
    <Grid Margin="0,0,0,0" Height="500">
        <Grid Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="310*"/>
                <ColumnDefinition Width="321*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="252*" />
                <!--   <RowDefinition Height="12*" />-->
            </Grid.RowDefinitions>
            <!--Background="#FF576ED4" Margin="47,10,27.6,13.4">-->
            <Border CornerRadius="10" Height="500" VerticalAlignment="Top" Margin="0,-43,0,0" Grid.ColumnSpan="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#7be9f6" Offset="0.0"></GradientStop>
                        <GradientStop Color="#f083da" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Grid Grid.Row="0" Grid.Column="0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Belépés" TextAlignment="Center" FontFamily="Helvetica" FontWeight="Bold"  FontSize="20" Foreground="White"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,130,0,0">
                    <TextBlock Height="23" FontFamily="Helvetica" FontWeight="Light" FontSize="20" Foreground="White" HorizontalAlignment="Left" Margin="0,0,0,0" Text="Felhasználó név:" VerticalAlignment="Top" Width="158" />
                    <TextBox Height="22" HorizontalAlignment="Left" Margin="0,2" Name="textBoxUserName" Text="" VerticalAlignment="Center" Width="184" Padding="1.5" AcceptsTab="True" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Height="23" FontFamily="Helvetica" FontWeight="Light" FontSize="20" Foreground="White" HorizontalAlignment="Left" Margin="0,0,0,0" Text="Jelszó:" VerticalAlignment="Top" Width="158" />
                    <TextBox Height="22" HorizontalAlignment="Left" Margin="0,1" Name="textBoxPassword" Text="" VerticalAlignment="Center" Width="185" Padding="1.5" AcceptsTab="True" />
                </StackPanel>
                <StackPanel Margin="0,30,0,0" HorizontalAlignment="Center">
                    <Button Content="Belépés" Height="28" HorizontalAlignment="Center" Width="103"></Button>
                </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1">
                <StackPanel Orientation="Vertical">
                    <StackPanel>
                        <TextBlock Text="Regisztráció" TextAlignment="Center" FontFamily="Helvetica" FontWeight="Bold"  FontSize="20" Foreground="White"></TextBlock>
                    </StackPanel>
                    <StackPanel Margin="0,100,0,0" HorizontalAlignment="Left">
                        <TextBlock Text="Regisztrálás mint:" FontFamily="Helvetica" FontWeight="Light" FontSize="20" Foreground="White"/>
                    </StackPanel>
                    <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center" >                        
                        <RadioButton Content="Vendég" GroupName="One" FontFamily="Helvetica" FontWeight="Light" FontSize="18" Foreground="White"></RadioButton>
                        <RadioButton Content="Étterem" GroupName="One" FontFamily="Helvetica" FontWeight="Light" FontSize="18" Foreground="White"></RadioButton>
                        <RadioButton Content="Futár" GroupName="One" FontFamily="Helvetica" FontWeight="Light" FontSize="18" Foreground="White"></RadioButton>
                    </StackPanel>
                    <StackPanel Margin="0,30,0,0" HorizontalAlignment="Center">
                        <Button Content="Regisztráció" Height="28" HorizontalAlignment="Center" Width="103"></Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
